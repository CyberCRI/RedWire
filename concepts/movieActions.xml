  <object id="loadingScreenLocals">
    <field loadingPercent="model:status.Loading"/>
  </object> 

<root>
  <sequence>
    <!-- Init page -->
    <ui_html_show location="body" html="asset:baseTemplate"/>
    <define location="main">
      <!-- Show loading screen -->
      <ui_html_show html="model:loadingScreen"/>
      
      <parallel>
        <!-- Format loading screen -->
        <ui_html_jade template="asset:loadingScreen" output="model:loadingScreen" locals="@loadingScreenLocals"/>

        <!-- Load assets -->
        <loadAssets toLoad="ALL" loadingPercent="model:status.loading">
      </parallel>

      <!-- Show game -->
      <if condition="model:status.paused">
        <!-- Show pause screen -->
        <ui_html_show html="asset:pauseScreen"/>

        <sequence loop="true">
          <!-- Show Intro -->
          <ui_html_show html="asset:introScreen" />
          <!-- Show scene A -->
          <ui_html_show html="asset:introScreen" />
          <!-- Show credits -->
          <ui_html_show html="asset:credits" />
        </sequence>
      </if>
    </define>
  </sequence>
</root>