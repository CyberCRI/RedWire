{
  "action": "doInParallel",
  "children": [ 
    {
      "send": {
        "services.graphics.shapes": "{ shape1: { type: 'circle', fillStyle: services.mouse.down && 'green' || 'blue', position: services.mouse.position, radius: model.size } }"
      }
    },
    {
      "action": "doInSequence",
      "params": {
        "in": {
          "activeChild": "model.activeChild"
        },
        "out": {
          "model.activeChild": "params.activeChild"
        }
      },
      "children": [
        { 
          "action": "doWhile",
          "params": {
            "in": {
              "value": "model.size < 100"
            }
          },
          "children": [
            {
              "send": {
                "model.size": "model.size + 1"
              }
            }
          ]
        },
        { 
          "action": "doWhile",
          "params": {
            "in": {
              "value": "model.size > 10"
            }
          },
          "children": [
            {
              "send": {
                "model.size": "model.size - 1"
              }
            }
          ]
        }
      ]
    }
  ]
}
